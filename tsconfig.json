{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "build",
        "rootDir": "src",
        "noImplicitAny": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "pretty": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules", "index.d.ts"
    ]
}
{
  "name": "xml-core",
  "version": "1.0.2",
  "description": "`xml-core` is a set of classes that make it easier to work with XML within the browser and node.",
  "main": "build/lib/index.js",
  "types": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@types/node": "*",
    "@types/mocha": "^2.2.33",
    "xmldom-alpha": "^0.1.21",
    "xpath.js": "^1.0.6"
  },
  "devDependencies": {
    "coveralls": "^2",
    "live-server": "^1",
    "mocha": "^3",
    "npm-run-all": "^3",
    "nyc": "^8",
    "typescript": "^2",
    "watch": "^0"
  },
  "scripts": {
    "clean": "rm -rf build/ buildjs/ coverage/ .nyc_output/ npm-debug.log npm-debug.log.*",
    "install": "npm run build",
    "pretest": "npm run build:map",
    "test": "mocha build/test",
    "build": "npm run build:es5",
    "build:es5": "tsc",
    "build:es2015": "tsc --module commonjs --target es2015",
    "build:source": "tsc --declaration --declarationDir types",
    "prepublish": "npm run build",
    "build:map": "tsc --sourceMap",
    "pub": "npm version patch && npm publish && git push",
    "sync": "git ac && git pull --rebase && git push",
    "coverage": "nyc npm test",
    "precoveragehtml": "npm run coverage",
    "coveragehtml": "nyc report -r html",
    "watch": "watch 'npm run coveragehtml' lib/ src/ test/",
    "live": "live-server -q --port=4005 --ignorePattern='(js|css|png)$' coverage",
    "predev": "if [ ! -f coverage/index.html ]; then mkdir coverage; cp .waiting.html coverage/index.html; fi",
    "dev": "npm-run-all -p --silent watch live",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/xmljs.git"
  },
  "keywords": [
    "xml"
  ],
  "author": "microshine",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/xmljs/issues"
  },
  "homepage": "https://github.com/PeculiarVentures/xmljs#readme"
}

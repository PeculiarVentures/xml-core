{
  "name": "xml-core",
  "version": "1.0.4",
  "description": "`xml-core` is a set of classes that make it easier to work with XML within the browser and node.",
  "main": "build/lib/index.js",
  "types": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@types/node": "*",
    "@types/mocha": "^2.2.33",
    "xmldom-alpha": "^0.1.21",
    "xpath.js": "^1.0.6"
  },
  "devDependencies": {
    "coveralls": "^2",
    "mocha": "^3",
    "nyc": "^8",
    "typescript": "^2"
  },
  "scripts": {
    "clean": "rm -rf build/ buildjs/ coverage/ .nyc_output/ npm-debug.log npm-debug.log.*",
    "install": "npm run build",
    "pretest": "npm run build:map",
    "test": "mocha build/test",
    "build": "npm run build:es5",
    "build:es5": "tsc",
    "build:es2015": "tsc --module commonjs --target es2015",
    "build:source": "tsc --declaration --declarationDir types",
    "prepublish": "npm run build",
    "build:map": "tsc --sourceMap",
    "pub": "npm version patch && npm publish && git push",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/xml-core.git.git"
  },
  "keywords": [
    "xml"
  ],
  "author": "microshine",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/xml-core.git/issues"
  },
  "homepage": "https://github.com/PeculiarVentures/xml-core.git#readme"
}

{
  "name": "xml-core",
  "version": "1.0.15",
  "description": "`xml-core` is a set of classes that make it easier to work with XML within the browser and node.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "tslib": "^1.10.0",
    "xmldom-alpha": "^0.1.28",
    "xpath.js": "^1.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.8",
    "coveralls": "^3.0.7",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "rollup": "^1.27.0",
    "rollup-plugin-ts": "^0.2.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "clean": "rm -rf build/ buildjs/ coverage/ .nyc_output/ npm-debug.log npm-debug.log.*",
    "test": "mocha",
    "prepare": "npm run build",
    "build": "rollup -c",
    "lint": "tslint 'src/**/*.ts'",
    "prepub": "npm run lint && npm run test && npm run build",
    "pub": "npm version patch && git push --follow-tags",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/xml-core.git"
  },
  "keywords": [
    "xml"
  ],
  "author": "microshine",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/xml-core.git/issues"
  },
  "homepage": "https://github.com/PeculiarVentures/xml-core.git#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  }
}

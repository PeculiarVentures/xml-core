{
  "name": "xml-core",
  "version": "1.0.14",
  "description": "`xml-core` is a set of classes that make it easier to work with XML within the browser and node.",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@types/node": "^10.5.4",
    "tslib": "^1.9.3",
    "xmldom-alpha": "^0.1.28",
    "xpath.js": "^1.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-typescript": "^0.8.1",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "clean": "rm -rf build/ buildjs/ coverage/ .nyc_output/ npm-debug.log npm-debug.log.*",
    "test": "mocha",
    "prepare": "npm run build",
    "build": "npm run build:lib && npm run build:es5",
    "build:es5": "rollup -c",
    "build:map": "rollup -c -m",
    "build:source": "tsc -p src --declaration --declarationDir types",
    "build:lib": "rollup -c rollup.config.lib.js",
    "lint": "tslint 'src/**/*.ts'",
    "prepub": "npm run lint && npm run test && npm run build",
    "pub": "npm version patch && npm publish && git push",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/xml-core.git"
  },
  "keywords": [
    "xml"
  ],
  "author": "microshine",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/xml-core.git/issues"
  },
  "homepage": "https://github.com/PeculiarVentures/xml-core.git#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  }
}
